  for pod5_file in *.pod5; do base_name=$(basename "$pod5_file" .pod5); dorado basecaller --device cuda:all  dna_r10.4.1_e8.2_400bps_sup@v5.0.0 "$pod5_file" > ${base_name}.bam;done

   for pod5_folder in ./*/*; do name=$(echo "$pod5_folder" | cut -d"/" -f3); dorado basecaller --verbose --device cuda:all --trim --emit_moves sup,6mA,4mC_5mC "$pod5_folder" > ${name}.bam; done

for pod5_folder in ./*/*; do name=$(basename "$pod5_folder"); dorado basecaller --verbose --device cuda:all --trim --emit-moves sup,6mA,4mC_5mC "$pod5_folder" > ${name}.bam; done

nextflow run main.nf --fasta /mnt/6tb_3/Phage-
scope_database/fastas/all_NCBI-Refseq_phages_23-04-2025.fasta --phagescope_db -profile ukj_cloud --output results_cloud_run